---
import BaseLayout from "../layouts/BaseLayout.astro";

// Get error message from URL params
const url = Astro.url;
const message = url.searchParams.get('message') || 'Ha ocurrido un error inesperado';
const code = url.searchParams.get('code') || '500';
---

<BaseLayout title="Error — Aperture Core">
  <section class="py-20">
    <div class="mx-auto max-w-2xl px-4 text-center">
      <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-red-100">
        <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      </div>
      
      <h1 class="text-3xl font-semibold text-gray-900">Algo salió mal</h1>
      <p class="mt-3 text-slate-600">{message}</p>
      
      <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:justify-center">
        <a 
          href="/contacto" 
          class="inline-flex items-center rounded-md bg-indigo-600 px-5 py-2.5 text-white font-medium hover:bg-indigo-700"
        >
          Intentar de nuevo
        </a>
        <a 
          href="/" 
          class="inline-flex items-center rounded-md border border-gray-300 px-5 py-2.5 text-gray-700 font-medium hover:bg-gray-50"
        >
          Volver al inicio
        </a>
      </div>
      
      {code !== '500' && (
        <p class="mt-6 text-sm text-gray-500">Código de error: {code}</p>
      )}
    </div>
  </section>
</BaseLayout>