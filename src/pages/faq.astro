---
import BaseLayout from "../layouts/BaseLayout.astro";
const faqs = [
  { q: '¿En cuánto tiempo entregan un MVP?', a: 'Entre 4 y 8 semanas según alcance.' },
  { q: '¿Trabajan por proyecto o retainer?', a: 'Ambos. Definimos el modelo óptimo tras el discovery.' },
  { q: '¿Qué stack usan?', a: 'TypeScript, Node, Python, Astro/Next, AWS, Postgres, entre otros.' },
];
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map(f => ({
    '@type': 'Question',
    name: f.q,
    acceptedAnswer: { '@type': 'Answer', text: f.a }
  }))
};
---

<BaseLayout title="FAQ — Aperture Core" description="Respuestas rápidas a preguntas frecuentes.">
  <section class="py-12">
    <div class="mx-auto max-w-3xl px-4">
      <h1 class="text-3xl font-bold">Preguntas frecuentes</h1>
      <dl class="mt-8 space-y-6">
        {faqs.map((f) => (
          <div class="rounded-lg border p-4 bg-white">
            <dt class="font-semibold">{f.q}</dt>
            <dd class="mt-2 text-slate-700">{f.a}</dd>
          </div>
        ))}
      </dl>
      <script type="application/ld+json">{JSON.stringify(faqSchema)}</script>
    </div>
  </section>
</BaseLayout>
